<div class="container my-4">
  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <div class="card" style="max-width:100%">
        <%= image_tag 'top_bg', class:"card-img", style:"width:100%" %>
        <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center" style="background-color:rgba(0,0,0,0.4)">
          <h1 class="text-white">Welcome to SmaPhotography!</h1>
          <p class="text-white text-center">
            スマフォトグラフィーへようこそ！<br>
            こちらは、スマホで撮影した写真を<br>
            投稿・共有できるSNSです。<br>
          </p>
          <% if user_signed_in? %>
          <% else %>
            <p class="text-white text-center">
              投稿するには、ユーザー登録が必要です。
            </p>

            <div class="d-flex justify-content-center">
              <%= link_to new_user_registration_path, class: "mr-5 btn btn-success", style: "width:100px" do %>
                新規登録
              <% end %>
              <%= link_to new_user_session_path, class: "btn btn-primary", style: "width:100px" do %>
                ログイン
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-4 text-center">
      <h3>
        <strong>最新の投稿</strong>
      </h3>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row justify-content-center">
    <% @post_photos.each do |post_photo| %>
      <div class="col-lg-3">
        <%= link_to post_photo_path(post_photo.id) do %>
          <%= image_tag post_photo.get_photo_image(500,500), style:"width:200px; height:200px; object-fit:cover;" %>
          <p class="text-body text-center"><%= post_photo.user.name %></p>
          <p class="text-body text-center"><%= post_photo.type_name %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>