<div class="container">
  <div class="row my-3 pt-3 d-flex justify-content-center">
    <h4 class="text-center">全投稿一覧</h4>
  </div>
</div>

<div class="container mt-3">
  <div class="row d-flex justify-content-center">
    <% @post_photos.each do |post_photo| %>
      <div class="col-lg-2 mx-1 mb-4">
        <%= link_to post_photo_path(post_photo.id) do %>
          <%= image_tag post_photo.get_photo_image(300,300), style:"width:120px; height:120px; object-fit:cover;" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="container my-2">
  <div class="row">
    <div class="col-lg-12 mx-auto d-flex justify-content-center">
      <%= paginate @post_photos %>
    </div>
  </div>
</div>