<div class="container">
  <div class="row my-3 pt-3 d-flex justify-content-center">
    <h4 class="text-center">投稿詳細</h4>
  </div>
</div>

<div class="container my-3">
  <div class="row">
    <div class="col-lg-12 mb-3 d-flex justify-content-center">
      <%= image_tag @post_photo.get_photo_image(400,400) %>
    </div>
    <div class="col-lg-12 mb-3 d-flex justify-content-center">
      <%= link_to user_path(@post_photo.user.id), class: "text-body" do %>
        <%= @post_photo.user.name %>
      <% end %>
    </div>
    <div class="col-lg-12 mb-3 d-flex justify-content-center">
      <%= @post_photo.type_name %>
    </div>
    <div class="col-lg-12 d-flex justify-content-center">
      <%= @post_photo.introduction %>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <div class="container">
    <div class="row mb-3 d-flex justify-content-center">
      <% if @post_photo.user_id == current_user.id %>
        <%= link_to post_photo_path(@post_photo.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn btn-danger", style: "width:100px" do %>
          削除
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>