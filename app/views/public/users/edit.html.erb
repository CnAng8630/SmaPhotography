<div class="container">
  <div class="row my-3 pt-3 d-flex justify-content-center">
    <h4 class="text-center">プロフィール編集</h4>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-center">
    <%= form_with model: @user do |f| %>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "プロフィール画像" %></div>
        <div class="col-lg-6 mb-2">
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
      </div>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "ユーザー名" %></div>
        <div class="col-lg-6 mb-2">
          <%= f.text_field :name, size: 30, placeholder:"スマフォト", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "メールアドレス" %></div>
        <div class="col-lg-6 mb-2">
          <%= f.text_field :email, size: 30, placeholder:"sample@example.com", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "自己紹介" %></div>
        <div class="col-lg-6 mb-3">
          <%= f.text_area :introduction, size: 30, placeholder:"撮影で使っている機種や、どのような写真を撮るかなどを記入してください。", class:"form-control" %>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <%= f.submit "保存", class: "btn btn-success", style: "width:100px" %>
      </div>
    <% end %>
  </div>
</div>