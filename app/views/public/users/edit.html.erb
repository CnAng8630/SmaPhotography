<h2>プロフィール編集</h2>

<%= form_with model: @user do |f| %>
  <label>プロフィール画像</label>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <label>ユーザー名</label>
  <%= f.text_field :name, placeholder:"スマフォト" %>

  <label>メールアドレス</label>
  <%= f.text_field :email, placeholder:"sample@example.com" %>

  <label>自己紹介</label>
  <%= f.text_area :introduction, placeholder:"撮影で使っている機種や、どのような写真を撮るかなどを記入してください。" %>

  <%= f.submit "保存" %>
<% end %>