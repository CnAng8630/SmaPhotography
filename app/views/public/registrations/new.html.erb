<div class="container">
  <div class="row my-3 pt-3 d-flex justify-content-center">
    <h4 class="text-center">新規登録</h4>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-center">
    <%= form_with model: @user, url: user_registration_path do |f| %>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "ユーザー名" %></div>
        <div class="col-lg-6 mb-2">
          <%= f.text_field :name, size: 30, placeholder:"太郎", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "メールアドレス" %></div>
        <div class="col-lg-6 mb-2">
          <%= f.text_field :email, size: 30, placeholder:"sample@example.com", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "パスワード(6文字以上)" %></div>
        <div class="col-lg-6 mb-2">
          <%= f.password_field :password, size: 30, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row d-flex justify-content-center">
        <div class="col-lg-5 col-form-label"><%= f.label "パスワード(確認用)" %></div>
        <div class="col-lg-6 mb-3">
          <%= f.password_field :password_confirmation, size: 30, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="actions row d-flex justify-content-center">
        <%= f.submit "新規登録", class: "btn btn-success", style: "width:100px" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row mt-4 mb-3 d-flex justify-content-center">
    <div class="col-lg-6 text-center">
      ログインは <%= link_to "こちら", new_user_session_path %> から。
    </div>
  </div>
</div>